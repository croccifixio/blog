---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<h1>{title}</h1>

<style>
	h1 {
		font-feature-settings: 'ss05';
		font-size: 2.4rem;
		font-style: normal;
		font-weight: bold;
		hyphens: auto;
		line-height: 1;
		margin-block-end: 1.5rem;
		text-transform: uppercase;
	}
</style>
