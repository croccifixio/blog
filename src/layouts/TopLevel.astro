---
import BaseHead from '../components/BaseHead.astro';
import Nav from '../components/Nav.astro';
import TopLevelTitle from '../components/TopLevelTitle.astro';
import { getNavItems } from '../utils/nav';

const { name = '', description = '' } =
	getNavItems(Astro.url.pathname).find(({ isActive }) => isActive) ?? {};
---

<html lang="en">
	<head>
		<BaseHead title={name} description={description} />
		<style>
			body {
				padding-block-end: 1px;
			}
			main {
				max-width: 100ch;
			}
		</style>
	</head>

	<body>
		<main>
			<header>
				<TopLevelTitle title={name} />
				<Nav />
			</header>
			<slot />
		</main>
	</body>
</html>
